<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brentondurkee.ccm" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.brentondurkee.ccm.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <receiver
            android:name=".provider.gcm.Receiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.brentondurkee.ccm" />
            </intent-filter>
        </receiver>

        <service
            android:name=".provider.gcm.ListenService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name=".provider.gcm.InstanceIDListenService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name=".provider.gcm.RegIntentService"
            android:exported="false" >
        </service>

        <activity
            android:name=".Pager"
            android:label="CCM" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".events.EventDetail"
            android:label="@string/title_activity_event_detail"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pager" />
        </activity>
        <activity
            android:name=".inbox.MsgDetail"
            android:label="@string/title_activity_msg_detail"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pager" />
        </activity>
        <activity
            android:name=".talks.TalkDetail"
            android:label="@string/title_activity_talk_detail"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Pager" />
            >
        </activity>

        <provider
            android:name=".provider.DataProvider"
            android:authorities="com.brentondurkee.ccm"
            android:exported="false" />

        <service
            android:name=".provider.SyncService"
            android:exported="true"
            android:process=":sync" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <!-- <service android:name=".common.accounts.GenericAccountService" > -->


        <!-- &lt;!&ndash; Required filter used by the system to launch our account service. &ndash;&gt; -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.accounts.AccountAuthenticator" /> -->
        <!-- </intent-filter> -->
        <!-- &lt;!&ndash; This points to an XMLf ile which describes our account service. &ndash;&gt; -->
        <!-- <meta-data -->
        <!-- android:name="android.accounts.AccountAuthenticator" -->
        <!-- android:resource="@xml/authenticator" /> -->
        <!-- </service> -->

        <service android:name=".auth.AuthService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name=".auth.AuthActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".auth.SignUpActivity"
            android:label="SignUp"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".admin.AddEvent"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brentondurkee.ccm.Pager" />
        </activity>
        <activity
            android:name=".admin.AddTalk"
            android:label="@string/title_activity_add_talk"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brentondurkee.ccm.Pager" />
        </activity>
        <activity
            android:name=".admin.AddMsg"
            android:label="@string/title_activity_add_msg"
            android:parentActivityName=".Pager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brentondurkee.ccm.Pager" />
        </activity>
    </application>

</manifest>
