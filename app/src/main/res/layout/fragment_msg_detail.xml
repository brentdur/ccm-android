<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.brentondurkee.ccm.inbox.MsgDetail$MsgDetailFragment">

        <TextView
            android:id="@+id/msgDetailSubject"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            style="@style/ShowSubject" />

        <TextView
            android:id="@+id/msgDetailFrom"
            style="@style/ShowAuthor"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/msgDetailTime"
            style="@style/ShowDate"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/msgDetailMsg"
            android:layout_below="@+id/msgDetailTime"
            android:layout_alignParentStart="true"
            style="@style/EditMsg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_lead"
            android:id="@+id/textView"
            android:textColor="@color/leadText"
            style="@style/PrimaryText"
            android:layout_below="@+id/msgDetailSubject"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_lead"
            android:id="@+id/textView5"
            android:layout_below="@+id/msgDetailFrom"
            android:layout_alignParentStart="true"
            android:textColor="@color/leadText"
            style="@style/PrimaryText" />
    </RelativeLayout>
</ScrollView>