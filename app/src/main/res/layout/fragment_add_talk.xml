<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brentondurkee.ccm.talks.TalkDetail$TalkDetailFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/fragment_talk_detail">


    <EditText
        android:id="@+id/talkAddTopic"
        style="@style/EditTopic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/talkAddAuthor"
        style="@style/EditAuthor"
        android:layout_below="@+id/talkAddTopic"
        android:layout_alignStart="@+id/talkAddVerse" />

    <EditText
        android:id="@+id/talkAddTime"
        style="@style/EditDate"
        android:layout_below="@+id/talkAddAuthor"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:id="@+id/talkAddVerse"
        style="@style/EditReference"
        android:layout_below="@+id/talkAddTime"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/talkAddAuthor"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_lead"
        android:textColor="@color/leadText"
        style="@style/PrimaryText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/talkAddVerse"
        android:layout_alignParentStart="true"
        android:text="@string/date_lead"
        android:textColor="@color/leadText"
        style="@style/PrimaryText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reference_lead"
        android:id="@+id/textView8"
        android:textColor="@color/leadText"
        style="@style/PrimaryText"
        android:layout_alignBottom="@+id/talkAddVerse"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/talkAddOutline"
        style="@style/EditOutline"
        android:layout_below="@+id/talkAddVerse"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/EditSubmit"/>


</RelativeLayout>
