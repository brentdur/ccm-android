<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.brentondurkee.ccm.inbox.MsgDetail$MsgDetailFragment">

    <EditText
        android:id="@+id/msgAddSubject"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/EditSubject" />

    <EditText
        android:id="@+id/msgAddMsg"
        android:layout_below="@+id/spinner_to"
        android:layout_alignParentStart="true"
        style="@style/EditMsg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic_lead"
        android:id="@+id/textView4"
        android:textColor="@color/leadText"
        android:layout_below="@+id/msgAddSubject"
        android:layout_alignParentStart="true"
        style="@style/PrimaryText" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_to"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:gravity="start" />

    <Button
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/EditSubmit"/>

</RelativeLayout>
