<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="275dp"
            android:layout_height="30dp"
            android:text="@string/topic_hint"
            android:id="@+id/talkTopic"
            style="@style/HeaderText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="@string/date_hint"
            android:id="@+id/talkTime"
            style="@style/BodyText"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="25dp"
            android:text="@string/reference_hint"
            style="@style/TitleText"
            android:id="@+id/talkVerse"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/talkTopic"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:text="@string/author_hint"
            android:id="@+id/talkAuthor"
            style="@style/BodyText"
            android:layout_gravity="center_horizontal|top"
            android:gravity="left"
            android:layout_below="@+id/talkVerse"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />
</RelativeLayout>
