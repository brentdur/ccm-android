<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primaryCCM</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorAccent">@color/primaryAccent</item>
        <item name="android:colorBackground">@color/primaryBackground</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:listDivider">@android:drawable/divider_horizontal_bright</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyTab">
        <item name="tabIndicatorColor">@color/primaryAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SuperHeadText">
        <item name="android:textSize">45sp</item>
    </style>
    <style name="PrimaryText">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SubHeadText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BodyText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditDate" parent="HeaderText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/date_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowDate" parent="EditDate">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="EditTimeInfo" parent="HeaderText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/time_info_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowTimeInfo" parent="EditTimeInfo">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="EditSubject" parent="SuperHeadText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/subject_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowSubject" parent="EditSubject">
    </style>
    <style name="EditTitle" parent="SuperHeadText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/title_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowTitle" parent="EditTitle">
    </style>
    <style name="EditTopic" parent="SuperHeadText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/topic_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowTopic" parent="EditTopic">
    </style>
    <style name="EditLocation" parent="HeaderText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/location_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowLocation" parent="EditLocation">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="EditAddress" parent="HeaderText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/location_address_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditLocationName" parent="HeaderText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/location_name_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditReference" parent="HeaderText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/reference_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowReference" parent="EditReference">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="ShowVerse" parent="ShowReference">
        <item name="android:singleLine">false</item>
    </style>
    <style name="EditAuthor" parent="PrimaryText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/author_hint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowAuthor" parent="EditAuthor">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="EditTo" parent="PrimaryText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/to_lead</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ShowTo" parent="EditTo">
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="EditMsg" parent="TitleText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/message_hint</item>
    </style>
    <style name="EditDesc" parent="TitleText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/description_hint</item>
    </style>
    <style name="EditOutline" parent="TitleText">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/outline_hint</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditSubmit" parent="TitleText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/submit_button</item>
    </style>

    <style name="editTextCCM">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:selectable">true</item>

        <item name="android:colorControlNormal">@color/primaryAccent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:colorBackground">@color/primaryAccent</item>

        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:editTextColor">@color/primaryTextColor</item>
    </style>

</resources>
