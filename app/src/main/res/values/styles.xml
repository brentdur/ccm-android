<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primaryCCM</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorAccent">@color/primaryAccent</item>
        <item name="android:colorBackground">@color/primaryBackground</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:listDivider">@android:drawable/divider_horizontal_bright</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyTab">
        <item name="tabIndicatorColor">@color/primaryAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SubHeadText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BodyText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="editTextCCM">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:selectable">true</item>

        <item name="android:colorControlNormal">@color/primaryAccent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:colorBackground">@color/primaryAccent</item>

        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:editTextColor">@color/primaryTextColor</item>
    </style>

</resources>
